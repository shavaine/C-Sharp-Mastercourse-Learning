@page
@model MiniProjectRazorPages.Pages.PeopleModel
@{
    ViewData["Title"] = "People";
}

<h1>People</h1>

<form method="post">
    <div class="form-group pb-2">
        <label asp-for="Person.FirstName"></label>
        <input type="text" asp-for="Person.FirstName" placeholder="First Name" />
    </div>
    <div class="form-group pb-2">
        <label asp-for="Person.LastName"></label>
        <input type="text" asp-for="Person.LastName" placeholder="Last Name" />
    </div>
    <div class="form-group pb-2">
        <input asp-for="Person.IsActive" type="checkbox" />
        <label asp-for="Person.IsActive"></label>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
